{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6"],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude":[
    "node_modules",
    "test"
  ],
  "include": [
      "src/**/*"
  ],
}
